<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_main"
    tools:layout_editor_absoluteY="81dp">

    <WebView
        android:id="@+id/stream"
        android:layout_width="match_parent"
        android:layout_height="295dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp" />






    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stream"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="-20dp"
        android:text="Temperatura:"
        android:textSize="11dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/data1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stream"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="-20dp"
        android:text="-- Â°C"
        android:textSize="11dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stream"
        android:layout_marginStart="130dp"
        android:layout_marginBottom="-20dp"
        android:text="Humedad:"
        android:textSize="11dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/data2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stream"
        android:layout_marginStart="182dp"
        android:layout_marginBottom="-20dp"
        android:text="-- %"
        android:textSize="11dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stream"
        android:layout_marginStart="230dp"
        android:layout_marginBottom="-20dp"
        android:text="Proximidad:"
        android:textSize="11dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/data3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stream"
        android:layout_marginStart="291dp"
        android:layout_marginBottom="-20dp"
        android:text="-- cms."
        android:textSize="11dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/action1"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:drawableStart="@drawable/command"
        android:layout_alignTop="@+id/action2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:text="Panel"
        android:textSize="10dp" />

    <Button
        android:id="@+id/action2"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:drawableStart="@drawable/camera"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:text="Screenshot"
        android:textSize="10dp" />

    <Button
        android:id="@+id/action3"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:drawableStart="@drawable/luces"
        android:layout_alignTop="@+id/action2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:text="Luces"
        android:textSize="10dp" />

    <Button
        android:id="@+id/button_up"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:drawableTop="@drawable/up"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"
        android:text="go"
        android:textSize="10dp" />

    <Button
        android:id="@+id/button_down"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:drawableTop="@drawable/down"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="back"
        android:textSize="10dp" />


    <Button
        android:id="@+id/button_left"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:drawableTop="@drawable/left"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_marginStart="90dp"
        android:text="lt"
        android:textSize="10dp" />

    <Button
        android:id="@+id/button_right"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="70dp"
        android:drawableTop="@drawable/right"
        android:text="rt"
        android:textSize="10dp" />


</RelativeLayout>